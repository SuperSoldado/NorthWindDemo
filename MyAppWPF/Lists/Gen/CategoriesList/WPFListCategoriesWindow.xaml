    <!--Track[0018] WPF_List_Window.html-->
    <Page x:Class="MyApp.WPFList.Categories.ListWPFCategories"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:local="clr-namespace:MyApp.WPFList.Categories"
                        mc:Ignorable="d"
                        Title="Categories">
        <Grid Name="mainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="90" />
                <RowDefinition Height="*" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>

            <GroupBox Name="groupVisibility" Header="{Binding WPFMessageAndLabelForList.LabelGroupVisibility}" Grid.Row="0" Margin="5,0,5,5">
                <StackPanel Orientation="Horizontal">
                    <GroupBox x:Name="groupSearch" Header="{Binding WPFMessageAndLabelForList.LabelGroupSearch}" Margin="5,0,5,5">
                        <StackPanel Name="stackMainFilter" Orientation="Horizontal">
                            <TextBox Name="txtFilter" Width="150" Margin="5,5,0,5"></TextBox>
                            <Button Name="btnClearFilter" Content="X" Width="20" Click="btnFilter_Click" Margin="0,5,5,5"></Button>
                        </StackPanel>
                    </GroupBox>


                    <GroupBox Margin="5,0,5,5">
                        <StackPanel Name="stackButtons" HorizontalAlignment="Right" Orientation="Horizontal">
                            <Button Name="btnFilter" Content="{Binding WPFMessageAndLabelForList.LabelBtnFilter}" Click="btnFilter_Click" Margin="12"></Button>
                            <Button Name="btnReload" Content="{Binding WPFMessageAndLabelForList.LabelBtnReload}" Click="btnReload_Click" Margin="12"></Button>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </GroupBox>
            <!-- ToDo: Refactor this part as separated template file. Now is in GenericList.cs-->
            <DataGrid Name="DataGridCategories"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      AlternatingRowBackground="LightBlue"
                      AlternationCount="2"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Stretch"
                      SelectionMode="Single"
                      SelectionChanged="OnSelectionChanged"
                      PreviewKeyDown="OnPreviewKeyDown"
                      DataGridCell.Selected="OnDataGridCell_Selected"
                      RowEditEnding="OnRowEditEnding">
                <DataGrid.Columns>

                    <!-- Begin PK Column CategoryID-->
                    <DataGridTextColumn IsReadOnly="True" Header="CategoryID" Binding="{ Binding CategoryID, UpdateSourceTrigger=LostFocus}" />
                    <!-- End column CategoryID-->
                    <!-- Begin Column CategoryName-->
                    <DataGridTextColumn Header="CategoryName" Binding="{ Binding CategoryName, UpdateSourceTrigger=LostFocus}" />
                    <!-- End column CategoryName-->
                    <!-- Begin Column Description-->
                    <DataGridTextColumn Header="Description" Binding="{ Binding Description, UpdateSourceTrigger=LostFocus}" />
                    <!-- End column Description-->
                    <!-- Begin Column Picture-->
                    <DataGridTemplateColumn Header="Picture" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Name="btnAddPicture" Content=" + " Click="btnAddPicture_Click" Visibility="{Binding BtnAddPictureVisibility}"></Button>
                                    <Button Name="btnExcludePicture" Content=" x " Click="btnExcludePicture_Click" Visibility="{Binding BtnExcludePictureVisibility, FallbackValue=Collapsed}"></Button>
                                    <Image MaxHeight="50" MaxWidth="50" Tag="Picture" Stretch="Uniform" Source="{Binding Picture}" MouseUp="OnMouseUpBinary" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <!-- End column Picture-->


                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <!--<Button Click="OpenFormClick">Details</Button>-->
                                <Button Click="OpenFormClick" Content="{Binding Path=CategoriesDataContext.WPFMessageAndLabelForList.LabelBtnOpenForm,
                                            RelativeSource={RelativeSource AncestorType={x:Type Page}}}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <!--<Button Click="SaveClick">Save</Button>-->
                                <Button Click="SaveClick" Content="{Binding Path=CategoriesDataContext.WPFMessageAndLabelForList.LabelBtnSave,
                                            RelativeSource={RelativeSource AncestorType={x:Type Page}}}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <!--<Button Click="DeleteClick">Delete</Button>-->
                                <Button Click="DeleteClick" Content="{Binding Path=CategoriesDataContext.WPFMessageAndLabelForList.LabelBtnDelete,
                                            RelativeSource={RelativeSource AncestorType={x:Type Page}}}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </Page>
