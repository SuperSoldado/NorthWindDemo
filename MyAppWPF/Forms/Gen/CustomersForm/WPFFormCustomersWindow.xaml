    <Page x:Class="MyApp.WPFForms.Customers.FormWPFCustomers"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:local="clr-namespace:MyApp.WPFForms.Customers"
                        mc:Ignorable="d"
                        Title="Customers" Height="450" Width="800">

        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
<ColumnDefinition Width="*"/>
<ColumnDefinition Width="*"/>
<ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
<RowDefinition Height="Auto"/>
<RowDefinition Height="Auto"/>
<RowDefinition Height="Auto"/>
<RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Column="0" Grid.Row="0">
                    <Label Content="{ Binding LabelsAndMessagesCustomers.LabelsFromDBCustomers.LabelCustomerID}" />
                    <TextBox Text="{ Binding modelNotifiedForCustomersMain.CustomerID, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="0">
                    <Label Content="{ Binding LabelsAndMessagesCustomers.LabelsFromDBCustomers.LabelCompanyName}" />
                    <TextBox Text="{ Binding modelNotifiedForCustomersMain.CompanyName, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Column="2" Grid.Row="0">
                    <Label Content="{ Binding LabelsAndMessagesCustomers.LabelsFromDBCustomers.LabelContactName}" />
                    <TextBox Text="{ Binding modelNotifiedForCustomersMain.ContactName, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Column="0" Grid.Row="1">
                    <Label Content="{ Binding LabelsAndMessagesCustomers.LabelsFromDBCustomers.LabelContactTitle}" />
                    <TextBox Text="{ Binding modelNotifiedForCustomersMain.ContactTitle, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="1">
                    <Label Content="{ Binding LabelsAndMessagesCustomers.LabelsFromDBCustomers.LabelAddress}" />
                    <TextBox Text="{ Binding modelNotifiedForCustomersMain.Address, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Column="2" Grid.Row="1">
                    <Label Content="{ Binding LabelsAndMessagesCustomers.LabelsFromDBCustomers.LabelCity}" />
                    <TextBox Text="{ Binding modelNotifiedForCustomersMain.City, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Column="0" Grid.Row="2">
                    <Label Content="{ Binding LabelsAndMessagesCustomers.LabelsFromDBCustomers.LabelRegion}" />
                    <TextBox Text="{ Binding modelNotifiedForCustomersMain.Region, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="2">
                    <Label Content="{ Binding LabelsAndMessagesCustomers.LabelsFromDBCustomers.LabelPostalCode}" />
                    <TextBox Text="{ Binding modelNotifiedForCustomersMain.PostalCode, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Column="2" Grid.Row="2">
                    <Label Content="{ Binding LabelsAndMessagesCustomers.LabelsFromDBCustomers.LabelCountry}" />
                    <TextBox Text="{ Binding modelNotifiedForCustomersMain.Country, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Column="0" Grid.Row="3">
                    <Label Content="{ Binding LabelsAndMessagesCustomers.LabelsFromDBCustomers.LabelPhone}" />
                    <TextBox Text="{ Binding modelNotifiedForCustomersMain.Phone, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="3">
                    <Label Content="{ Binding LabelsAndMessagesCustomers.LabelsFromDBCustomers.LabelFax}" />
                    <TextBox Text="{ Binding modelNotifiedForCustomersMain.Fax, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
            </Grid>
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Column="0" Grid.Row="0">
                            <Button x:Name="btnUpdate" Tag="btnUpdate" Content="{ Binding LabelsAndMessagesCustomers.LanguageElementsControlsCustomers.LabelBtnUpdate}" Click="btnUpdate_Click" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="0">
                            <Button x:Name="btnDelete" Tag="btnDelete" Content="{ Binding LabelsAndMessagesCustomers.LanguageElementsControlsCustomers.LabelBtnDelete}" Click="btnDelete_Click" />
                        </StackPanel>
                        <StackPanel Grid.Column="3" Grid.Row="0">
                            <Button x:Name="btnNew" Tag="btnNew" Content="{ Binding LabelsAndMessagesCustomers.LanguageElementsControlsCustomers.LabelBtnNew}" Click="btnNew_Click" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
        </StackPanel>
    </Page>
