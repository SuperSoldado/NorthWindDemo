    <Page x:Class="MyApp.WPFForms.Suppliers.FormWPFSuppliers"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:local="clr-namespace:MyApp.WPFForms.Suppliers"
                        mc:Ignorable="d"
                        Title="Suppliers" Height="450" Width="800">

        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
<ColumnDefinition Width="*"/>
<ColumnDefinition Width="*"/>
<ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
<RowDefinition Height="Auto"/>
<RowDefinition Height="Auto"/>
<RowDefinition Height="Auto"/>
<RowDefinition Height="Auto"/>
<RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Column="0" Grid.Row="0">
                    <Label Content="{ Binding LabelsAndMessagesSuppliers.LabelsFromDBSuppliers.LabelSupplierID}" />
                    <TextBox Text="{ Binding modelNotifiedForSuppliersMain.SupplierID, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="0">
                    <Label Content="{ Binding LabelsAndMessagesSuppliers.LabelsFromDBSuppliers.LabelCompanyName}" />
                    <TextBox Text="{ Binding modelNotifiedForSuppliersMain.CompanyName, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Column="2" Grid.Row="0">
                    <Label Content="{ Binding LabelsAndMessagesSuppliers.LabelsFromDBSuppliers.LabelContactName}" />
                    <TextBox Text="{ Binding modelNotifiedForSuppliersMain.ContactName, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Column="0" Grid.Row="1">
                    <Label Content="{ Binding LabelsAndMessagesSuppliers.LabelsFromDBSuppliers.LabelContactTitle}" />
                    <TextBox Text="{ Binding modelNotifiedForSuppliersMain.ContactTitle, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="1">
                    <Label Content="{ Binding LabelsAndMessagesSuppliers.LabelsFromDBSuppliers.LabelAddress}" />
                    <TextBox Text="{ Binding modelNotifiedForSuppliersMain.Address, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Column="2" Grid.Row="1">
                    <Label Content="{ Binding LabelsAndMessagesSuppliers.LabelsFromDBSuppliers.LabelCity}" />
                    <TextBox Text="{ Binding modelNotifiedForSuppliersMain.City, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Column="0" Grid.Row="2">
                    <Label Content="{ Binding LabelsAndMessagesSuppliers.LabelsFromDBSuppliers.LabelRegion}" />
                    <TextBox Text="{ Binding modelNotifiedForSuppliersMain.Region, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="2">
                    <Label Content="{ Binding LabelsAndMessagesSuppliers.LabelsFromDBSuppliers.LabelPostalCode}" />
                    <TextBox Text="{ Binding modelNotifiedForSuppliersMain.PostalCode, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Column="2" Grid.Row="2">
                    <Label Content="{ Binding LabelsAndMessagesSuppliers.LabelsFromDBSuppliers.LabelCountry}" />
                    <TextBox Text="{ Binding modelNotifiedForSuppliersMain.Country, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Column="0" Grid.Row="3">
                    <Label Content="{ Binding LabelsAndMessagesSuppliers.LabelsFromDBSuppliers.LabelPhone}" />
                    <TextBox Text="{ Binding modelNotifiedForSuppliersMain.Phone, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="3">
                    <Label Content="{ Binding LabelsAndMessagesSuppliers.LabelsFromDBSuppliers.LabelFax}" />
                    <TextBox Text="{ Binding modelNotifiedForSuppliersMain.Fax, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Column="2" Grid.Row="3">
                    <Label Content="{ Binding LabelsAndMessagesSuppliers.LabelsFromDBSuppliers.LabelHomePage}" />
                    <TextBox Text="{ Binding modelNotifiedForSuppliersMain.HomePage, UpdateSourceTrigger = PropertyChanged}" />
                </StackPanel>
            </Grid>
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Column="0" Grid.Row="0">
                            <Button x:Name="btnUpdate" Tag="btnUpdate" Content="{ Binding LabelsAndMessagesSuppliers.LanguageElementsControlsSuppliers.LabelBtnUpdate}" Click="btnUpdate_Click" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="0">
                            <Button x:Name="btnDelete" Tag="btnDelete" Content="{ Binding LabelsAndMessagesSuppliers.LanguageElementsControlsSuppliers.LabelBtnDelete}" Click="btnDelete_Click" />
                        </StackPanel>
                        <StackPanel Grid.Column="3" Grid.Row="0">
                            <Button x:Name="btnNew" Tag="btnNew" Content="{ Binding LabelsAndMessagesSuppliers.LanguageElementsControlsSuppliers.LabelBtnNew}" Click="btnNew_Click" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
        </StackPanel>
    </Page>
