<Window x:Class="MyAppWPFLib.frmSaveAs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyAppWPFLib"
        mc:Ignorable="d"
        Title="frmSaveAs" Height="200" Width="200">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Vertical">
                <Label Content="File name and Path"></Label>
                <TextBox Name="txtFileName" Text="c:\"></TextBox>                
            </StackPanel>
            <Button Name="btnSave" Content="Save As" Width="100" Click="btnSave_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
